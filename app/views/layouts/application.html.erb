<!DOCTYPE html>
<html>
<head>
  <title>Loong</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Loong</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#Blog">博文</a></li>
            <li><a href="#Recommend">推荐</a></li>
            <li><a href="#Nav">导航</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><%= link_to current_user.name, "#" %></li>
              <li><%= link_to "退出", logout_path, method: 'delete' %></li>
            <% else %>
            	<li><%= link_to "登录", login_path %></li>
            	<li><%= link_to "注册", signup_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

      <%= yield %>

    </div><!-- /.container -->

	<footer class="footer navbar-inverse navbar-fixed-bottom ">
	  <div class="container" align="center">
	    <p>联系:
	    	<a href="mailto: jackerloong@gmail.com">jackerloong@gmail.com</a>
	    </p>
	  </div>
	</footer>

  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
